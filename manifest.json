{
  "manifest_version": 3,
  "name": "Common Ground",
  "version": "1.0",
  "description": "Schedule meetings based on mutual calendar availability.",
  "permissions": [
    "identity",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "options_page": "options.html",
  "default_locale": "ja",
  "icons": {
    "16": "common-ground-minimal.png",
    "48": "common-ground-minimal.png",
    "128": "common-ground.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "oauth2": {
    "client_id": "994174978925-s986vvdnl6r5aqgi87e0e90kcli9a2bn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  }
}
